<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-videoaddon" version="1.0.9"
	xmlns="http://apache.org/cordova/ns/plugins/1.0"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<name>cordova-plugin-videoaddon</name>
	<js-module name="VideoPlayer" src="www/cordova-plugin-videoaddon.js">
		<clobbers target="VideoPlayer" />
	</js-module>
	<platform name="ios">
		<!-- Hooks -->
		<hook type="before_plugin_install" src="hooks/install_prerequisites.js"/>
		<hook type="after_plugin_add" src="hooks/add_swift_support.js" />

		<!-- iOS Source Files -->
		<source-file src="src/ios/VideoPlayer.swift" />
		<source-file src="src/ios/DeskercisesViewController.swift" />
		<source-file src="src/ios/MindfulnessViewController.swift" />
		<source-file src="src/ios/Subtitles.swift" />

		<!-- iOS Resource Files -->
		<resource-file src="src/ios/resources/backAndImg.png" />
		<resource-file src="src/ios/resources/chevron-left-solid.png" />
		<resource-file src="src/ios/resources/close_lighter.png" />
		<resource-file src="src/ios/resources/like_lighter.png" />
		<resource-file src="src/ios/resources/like_medium.png" />
		<resource-file src="src/ios/resources/likefilled_lighter.png" />
		<resource-file src="src/ios/resources/likefilled_medium.png" />
		<resource-file src="src/ios/resources/MPlayer_FWD_WithNum_2x.png" />
		<resource-file src="src/ios/resources/MPlayer_Pause_2x.png" />
		<resource-file src="src/ios/resources/MPlayer_Play_2x.png" />
		<resource-file src="src/ios/resources/MPlayer_RWD_WithNum_2x.png" />
		<resource-file src="src/ios/resources/personIcon.png" />
		<resource-file src="src/ios/resources/soundIcon.png" />
		<resource-file src="src/ios/resources/Biryani-Bold.ttf" />

		<config-file parent="/*" target="config.xml">
			<feature name="VideoPlayer">
				<param name="ios-package" value="VideoPlayer" />
			</feature>
		</config-file>
	</platform>
</plugin>